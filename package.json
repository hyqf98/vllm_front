{
  "name": "vllm_front",
  "version": "1.0.0",
  "description": "一款基于Electron、Electron Vite开发的大模型环境管理工具",
  "main": "./out/main/index.js",
  "author": "hyqf98",
  "homepage": "https://electron-vite.org",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "watch": "electron-vite dev --watch",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "axios": "^1.13.2",
    "ollama": "^0.6.3",
    "openai": "^6.15.0",
    "ssh2": "^1.17.0",
    "unplugin-auto-import": "^20.0.0",
    "vue-element-plus-x": "^1.3.98"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^2.0.0",
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@vitejs/plugin-vue": "^6.0.0",
    "electron": "^37.3.1",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "element-plus": "^2.11.1",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "^10.3.0",
    "pinia": "^3.0.3",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.91.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^7.0.5",
    "vue": "^3.5.17",
    "vue-eslint-parser": "^10.2.0",
    "vue-router": "^4.5.1"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild",
      "vue-demi"
    ],
    "ignoredBuiltDependencies": [
      "@parcel/watcher",
      "cpu-features",
      "ssh2"
    ]
  },
  "build": {
    "productName": "VLLM管理工具",
    "appId": "com.vllm.manager",
    "copyright": "Copyright © 2024 hyqf98",
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "node_modules/ssh2/**",
      "node_modules/cpu-features/**"
    ],
    "directories": {
      "output": "release/"
    },
    "extraResources": [
      {
        "from": "resources/scripts/",
        "to": "resources/scripts/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "out/**/*",
      "package.json"
    ],
    "npmRebuild": false,
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": true,
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "VLLM管理工具",
      "installerIcon": "resources/icon.png",
      "uninstallerIcon": "resources/icon.png"
    },
    "win": {
      "icon": "resources/icon.png",
      "artifactName": "${productName}-${version}-${platform}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "resources/icon.png",
      "artifactName": "${productName}-${version}-${os}.${ext}",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "resources/icon.png",
      "artifactName": "${productName}-${version}-${platform}.${ext}",
      "category": "Development",
      "target": [
        "AppImage"
      ]
    }
  }
}
